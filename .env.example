# LangGraph Catalyst - Environment Variables Template
# このファイルを .env にコピーして、実際の値を設定してください

# ===========================
# OpenAI API設定
# ===========================
OPENAI_API_KEY=your_openai_api_key_here

# ===========================
# Chroma Vector DB設定
# ===========================
CHROMA_PERSIST_DIR=./data/chroma

# ===========================
# ログ設定
# ===========================
LOG_LEVEL=INFO

# ===========================
# 環境設定
# ===========================
ENVIRONMENT=development

# ===========================
# CORS設定（カンマ区切り）
# ===========================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ===========================
# JWT認証設定
# ===========================
# JWT_SECRET_KEY: ランダムな文字列を生成してください
# 生成方法: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production-GENERATE-RANDOM-KEY
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================
# ユーザー認証（環境変数ベース）
# ===========================
# 管理者パスワード（開発者用、無制限使用）
ADMIN_PASSWORD=your_admin_password_here

# テストユーザーパスワード（1日5回制限）
TESTUSER1_PASSWORD=your_testuser1_password_here
TESTUSER2_PASSWORD=your_testuser2_password_here
TESTUSER3_PASSWORD=your_testuser3_password_here

# ===========================
# LLM設定
# ===========================
DEFAULT_LLM_MODEL=gpt-4-turbo-preview
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
MAX_TOKENS=4096
TEMPERATURE=0.3

# ===========================
# RAG設定
# ===========================
RAG_TOP_K=5
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=150
